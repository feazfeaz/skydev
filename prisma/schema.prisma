datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model MediaFile {
  id            Int      @id @default(autoincrement())
  fileName      String
  fileType      String   // Sử dụng String thay cho enum
  isPriority    Boolean
  rootPath      String
  usecasePath   String
  durationSecond Int
  isReady       Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model FolderPath {
  id    Int      @id @default(autoincrement())
  path  String @unique 
}